# This file is for unifying the coding style for different editors and IDEs.
# More information at http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80

[*.py]
max_line_length = 79
trim_trailing_whitespace = true

[*.yml]
indent_size = 2
